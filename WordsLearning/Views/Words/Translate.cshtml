@model WordsLearning.Models.TransInfo
@{
    ViewBag.Title = "Translate";
}

<style>
    .panel {
        width:901px; 
        height:40px; 
        margin:0 auto;
        margin-top:60px;
    }
    </style>
 <div class="subtitle">  
     <h1>Teanslate</h1> 
 </div>
 <form id="form" enctype="multipart/form-data" runat="server" method="post" action="~/Words/Translate">
<div class="panel">
    <div>
        <input type="text" name="from" value="@Model.From" readonly="readonly" style="float:left;height:24px; width:169px;">
        <div class="changeTrans" title="Change"></div>
        <input type="text" name="to" value="@Model.To" readonly="readonly" style="float:left;height:24px; width:169px;">
        <div style="width:22px;height:10px;float:left"></div>
        <input type="button" class="Inputbtn" value="Translate" style="width:60px;" onclick="TransSubmit()">
    </div>
</div>
<div class="frame" style="width:901px; height:230px; margin:0 auto">
    <div class="Transbox">
        <div style="background-color:#3f3f46;width:450px;height:25px">Output</div> 
        <textarea id="result" name="result" style="background-color:#1e1e1e; width:450px;height:205px;" readonly="readonly">@Model.Dst</textarea>
    </div>
    <div style="background-color:#CA5100;width:1px;height:230px; float:right"></div>
    <div class="Transbox">     
       <div style="background-color:#3f3f46;width:450px;height:25px">Input</div>   
       <textarea id="query" name="query" style="background-color:#282828; width:450px;height:205px;margin:0 auto;">@Model.Src</textarea>
    </div>
    </div>
 </form>
<div style="width:901px; height:60px; margin:0 auto"></div>
        <div class="formout" style="width:901px; margin:0 auto;float:none">     
       <h4 class="title" style="height:23px; border-bottom:1px solid #007acc;">Example Sentence</h4>
       <textarea style="width:900px;height:280px;margin:0 auto; background-color:#1e1e1e;" readonly="readonly">@Model.Sentence</textarea>
</div>
    <script type="text/javascript">
        function TransSubmit() {
            $("#form").submit();
        }
        $(".changeTrans").click(function () {
            var to = $("input[name='to']").val();
            var from = $("input[name='from']").val();

            $("input[name='to']").val(from);
            $("input[name='from']").val(to);


        })
        </script>
