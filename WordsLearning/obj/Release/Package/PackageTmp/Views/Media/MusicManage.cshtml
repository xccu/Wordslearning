            paginate: true,
            size: 10,
            pageddid: 'pagedropdown',
            navid: 'tablenav',
            currentid: 'currentpage',
            totalid: 'totalpages',
            init: true
        });

        $(function () {
            $('.Edit').click(function () {
                var id = this.id;
                src = "@rootPath" + "Media/Edit/" + id;
                $("#newFrame").attr("src", src);
                $('#Edit').modal();
                return false;
            });
                })
